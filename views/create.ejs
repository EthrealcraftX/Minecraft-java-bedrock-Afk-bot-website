    </script>
</head>
<body>
    <div class="form-container">
        <h2>Create Minecraft Bot Project</h2>

        <form action="/create" method="POST">
            <label for="ip">IP Address:</label>
            <input type="text" id="ip" name="ip" placeholder="example.com or 192.168.1.100" required>

            <label for="port">Port:</label>
            <input type="text" id="port" name="port" pattern="\d{4,5}" maxlength="5" placeholder="19132" required>

            <label for="template">Edition:</label>
            <select id="template" name="template" onchange="updateVersions()" required>
                <option value="">-- Select Edition --</option>
                <option value="bedrock">Bedrock</option>
                <option value="java">Java</option>
            </select>

            <label for="version">Version:</label>
            <select id="version" name="version" required>
                <!-- Versiyalar JS orqali yuklanadi -->
            </select>

            <button type="submit" class="submit-button">Next</button>
        </form>
    </div>
</body>
</html>

